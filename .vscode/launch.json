    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'balius-server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=balius-server",
                    "--package=balius-server"
                ],
                "filter": {
                    "name": "balius-server",
                    "kind": "bin"
                }
            },
            "args": ["-c", "${workspaceFolder}/balius-server/config.yaml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'balius-server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=balius-server",
                    "--package=balius-server"
                ],
                "filter": {
                    "name": "balius-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'balius-worker-builder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=balius-worker-builder",
                    "--package=balius-worker-builder"
                ],
                "filter": {
                    "name": "balius-worker-builder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'balius-worker-builder'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=balius-worker-builder",
                    "--package=balius-worker-builder"
                ],
                "filter": {
                    "name": "balius-worker-builder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}